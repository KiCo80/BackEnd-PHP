<?php
    $f = "http://infojegyzet.hu/webszerkesztes/php/valuta/api/v1/arfolyam/";

    $fp   = fopen( $f  , "r"  ) ;
    $json = fread( $fp , 8192 ) ;
    fclose( $fp ) ;

    $adat = json_decode( $json) ;

    print ("1 USA dollár = ".round($adat->rates->EUR / $adat->rates->USD * $adat->rates->HUF, 2)." HUF");
    print("<br>");

    print $adat->rates->HUF;

    print("<table>");
